{
  "include": [
    "packages/*/src",
    "packages/*/__test__"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "checkJs": false,
    "allowJs": false,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@fruit/*": ["packages/*/src"]
    },
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}